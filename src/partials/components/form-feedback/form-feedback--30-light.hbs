<section class="feedback">
  <form class="feedback__form" enctype="multipart/form-data" action="" method="POST" onsubmit="return false">
    <h2 class="feedback__title section-title">Оставить заявку</h2>
    <label class="feedback__input">
      <span class="feedback__label">Выберите дату заезда</span>
      <select name="arrivalDate" class="arrival-date">
        <option value="04.06-08.06">04.06-08.06</option>
        <option value="11.06-15.06">11.06-15.06</option>
        <option value="18.06-22.06">18.06-22.06</option>
        <option value="25.06-29.06">25.06-29.06</option>
        <option value="02.07-06.07">02.07-06.07</option>
        <option value="09.07-13.07">09.07-13.07</option>
        <option value="16.07-20.07">16.07-20.07</option>
        <option value="23.07-27.07">23.07-27.07</option>
        <option value="30.07-03.08">30.07-03.08</option>
        <option value="06.08-10.08">06.08-10.08</option>
        <option value="13.08-17.08">13.08-17.08</option>
        <option value="20.08-24.08">20.08-24.08</option>
        <option value="27.08-31.08">27.08-31.08</option>
        <option value="03.09-07.09">03.09-07.09</option>
        <option value="10.09-14.09">10.09-14.09</option>
        <option value="17.09-21.09">17.09-21.09</option>
        <option value="24.09-28.09">24.09-28.09</option>
        <option value="01.10-05.10">01.10-05.10</option>
      </select>
    </label>
    <label class="feedback__input">
      <span class="visuallyhidden">Введите ваше имя</span>
      <input type="text" class="feedback-name" name="feedbackName" value="" placeholder="имя" required>
    </label>
    <label class="feedback__input">
      <span class="visuallyhidden">Введите ваш телефон</span>
      <input type="tel" class="feedback-phone" name="feedbackPhone" value="" placeholder="телефон" required>
    </label>
    <label class="feedback__input">
      <span class="visuallyhidden">Введите адрес электронной почты</span>
      <input type="email" class="feedback-email" name="feedbackEmail" value="" placeholder="e-mail">
    </label>
    <label class="feedback__input">
      <span class="visuallyhidden">Введите комментарий</span>
      <textarea class="feedback-comment" name="feedbackComment" value="" rows="4" cols="80" placeholder="комментарий"></textarea>
    </label>
    <button type="submit" class="btn feedback-submit" name="feedbackSubmit">Отправить</button>
  </form>
</section>
